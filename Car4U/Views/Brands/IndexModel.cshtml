@model IEnumerable<Car4U.Models.CarModel>
@{
    ViewBag.Title = "IndexModel";
}

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Marcas de Automóvel</h2>

<p class="buttonbackoffice" style="margin-bottom:70px">
    @Html.ActionLink(" Adicionar Marcas ", "Create", "Brands", new {@class="icon-Add submit" })
</p>
<div class="col-lg-4">
    <table class="table tableheader" style="width:200px">
        <tr>
            <th style="width:150px">Marca</th>
            <th style="width:100px">Acções</th>
        </tr>
        @foreach (var item in ViewBag.Brands)
        {
            string selectedRow = "";
            if (item.ID == ViewBag.ID)
            {
                selectedRow = "success";
            }
            <tr style="width:200px; padding:1px" class="@selectedRow" onclick='window.location.href="/Brands/IndexModel/@item.ID"'>
                <td style="padding:3px">
                    @item.Description
                </td>
                <td style="padding:3px">
                    <div class="buttonbackoffice" style="width:150px">
                        @Html.ActionLink(" ", "IndexModel", new { id = item.ID }, new { @id = "hover-icon", @class = "icon-Select submit", @title = "Select" })
                        @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @id = "hover-icon", @class = "icon-edit submit", @title = "Editar" })
                        @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @id = "hover-icon", @class = "icon-Details submit", @title = "Detalhes" })
                        @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @id = "hover-icon", @class = "icon-Delete submit", @title = "Apagar" })

                    </div>
                </td>
            </tr>
        }
    </table>
</div>

<div class="col-lg-8" style="margin-top:50px; position:fixed; left:600px">
    
    @if (Model != null)
    {
      
        
        <section class="destaque-subtitle">

            <h2>Modelos de @ViewBag.Brand </h2>
                <div class="buttonbackoffice" style="margin-bottom:50px">
                    @Html.ActionLink(" Adicionar novo Modelo ", "Create", "Brands", new { id = ViewBag.ID }, new { @class = "icon-Add submit"})                   
                </div>              
            
        </section>

    <table class="table tableheader" style="width:200px">
        <tr>
            <th style="width:100px">Modelos</th>
            <th style="width:100px">Acções</th>
        </tr>
        @foreach (var item in Model)
        {
           
            <tr style="width:200px; padding:1px">
                <td style="padding:4px">
                    @item.Description
                </td>
                <td style="padding:3px">

                    <div class="buttonbackoffice">
                        @Html.ActionLink(" ", "Edit","Brands", new { id = item.ID }, new {@id="hover-icon", @class = "icon-edit submit", @title = "Editar" })
                        @Html.ActionLink(" ", "Details","Brands", new { id = item.ID }, new {@id="hover-icon", @class = "icon-Details submit", @title = "Detalhes" })
                        @Html.ActionLink(" ", "Delete","Brands", new { id = item.ID }, new {@id="hover-icon", @class = "icon-Delete submit", @title = "Apagar" })
                 </div>

                </td>
            </tr>
        }
    </table>
        
    }
</div>