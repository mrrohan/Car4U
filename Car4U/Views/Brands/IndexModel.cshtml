@model Car4U.ViewModels.BrandsIndex
@using Microsoft.AspNet.Identity;
@using Car4U.DAL;

@{
    ViewBag.Title = "IndexModel";
}

<h2>IndexModel</h2>

<section class="destaque-title">
    <h2>
       Marcas
        <span class="pull-right">
            @Html.ActionLink("Create", "Create")
        </span>
    </h2>
</section>

<table class="table">
    <tr>
        <th></th>
        <th>Nome</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Brands)
    {
        string selectedRow = "";
        if (item.ID == ViewBag.ID)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow" onclick='window.location.href="/Brands/IndexModel/@item.ID"'>
            <td>
                @Html.ActionLink("Select", "IndexModel", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <span class="pull-right">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </span>
            </td>
        </tr>
    }

</table>

<div>

    @if (Model.CarModels != null)
    {
        <section class="destaque-subtitle">
            <h2>
                Modelos
                <span class="pull-right">
                    <a id="edit-details" href="~/CarModels/Create/@ViewBag.ID">Create</a>
                    @*@Html.ActionLink("Create", "Create", "CarModels", new { id = ViewBag.ID })*@
                </span>
            </h2>
        </section>
   
        <table class="table">
            <tr>
                <th></th>
                <th>Nome</th>
                <th></th>
            </tr>

            @foreach (var item in Model.CarModels)
            {
                string selectedRow = "";
                <tr class="@selectedRow">
                    <td>

                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <span class="pull-right">
                            <a id="edit-details" href="~/CarModels/Details/@item.ID">Details</a>
                            <a id="edit-details" href="~/CarModels/Edit/@item.ID">Edit</a>
                            <a id="edit-details" href="~/CarModels/Delete/@item.ID">Delete</a>
                        </span>
                    </td>
                </tr>
            }

        </table>
    }

</div>