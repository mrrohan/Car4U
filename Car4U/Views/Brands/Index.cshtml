@model IEnumerable<Car4U.Models.Brand>

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@{
    ViewBag.Title = "Index";
}



<div class="page-header">
<h2>Marcas</h2>
    </div>

<div class="buttonbackoffice">
    <button class="submit" type="button" onclick="location.href='@Url.Action("Create", "Brands")'">+ Adicionar Marca</button>
</div>
<table class="table stripedtable">
    <tr>
        <th>
            Marcas
            @*@Html.DisplayNameFor(model => model.Description)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
