@model Car4U.Models.Brand
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes da Marca</h2>

<div>
    
 
    <dl class="dl-horizontal">
        <dt>
            <h4> @Html.DisplayNameFor(model => model.Description) : </h4> 
        </dt>

        <dd>
            <h4>  @Html.DisplayFor(model => model.Description) </h4> 
</dd>

    </dl>
</div>
<div class="form-group">
    <div class="buttonbackoffice pull-left">
        <button class="submit icon-edit" type="button" onclick="location.href='@Url.Action("Edit", "Brands", new { id = Model.ID })'"> Editar </button>
        <button class="submit  icon-Delete" type="button" onclick="location.href='@Url.Action("Delete", "Brands", new { id = Model.ID })'"> Eliminar </button>
        <button class="submit  icon-back" type="button" onclick="location.href='@Url.Action("IndexModel", "Brands")'">  Voltar </button>
    </div>
</div>
