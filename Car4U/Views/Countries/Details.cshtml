@model Car4U.Models.Country

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="page-header">
    <h2>Detalhes</h2>
</div>
<div class="container">
    <div class=" form-horizontal">
        <div class="form-group">
            <div class=" col-md-10">
                <div>
                    <h4>País: @Html.DisplayFor(model => model.Name)</h4>
                </div>
                <div class="buttonbackoffice pull-left">
                    <button class="submit icon-edit" type="button" onclick="location.href='@Url.Action("Edit", "Countries", new { id = Model.ID })'"> Editar </button>
                    <button class="submit  icon-Delete" type="button" onclick="location.href='@Url.Action("Delete", "Countries", new { id = Model.ID })'"> Eliminar </button>
                    <button class="submit  icon-back" type="button" onclick="location.href='@Url.Action("Index", "Countries")'">  Voltar </button>
                </div>
            </div>
        </div>
    </div>
</div>