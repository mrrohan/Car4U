@model Car4U.Models.Country

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Detalhes</h2>

<div>
    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<div class="form-group">
    <div class="buttonbackoffice pull-left">
        <button class="submit icon-edit" type="button" onclick="location.href='@Url.Action("Edit", "Countries", new { id = Model.ID })'"> Editar </button>
