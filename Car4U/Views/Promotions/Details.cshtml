@model Car4U.Models.Promotion
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@{
    ViewBag.Title = "Details";
}

<div class=" page-header">
    <h2> Detalhes Promoções</h2>
</div>
<div class="container">
    <div class=" form-horizontal">
        <div class="form-group">
            <div class=" col-md-10">
                <div class=" container">
                    <table class=" table tableheader table-responsive" style="width:200px">
                        <tr><th></th><th></th></tr>
                        <tr>
                            <td>Descrição</td>
                            <td>@Html.DisplayFor(model => model.Description)</td>
                        </tr>
                        <tr>
                            <td>Percentagem</td>
                            <td>@Html.DisplayFor(model => model.Percentage)</td>
                        </tr>
                        <tr>
                            <td>Dias de Promoção</td>
                            <td>@Html.DisplayFor(model => model.Days)</td>
                        </tr>
                    </table>

                    <div class="buttonbackoffice">
                        <button class="submit icon-edit" type="button" onclick="location.href='@Url.Action("Edit", "Promotions", new { id = Model.ID })'"> Editar </button>
                        <button class="submit icon-Delete" type="button" onclick="location.href='@Url.Action("Delete", "Promotions", new { id = Model.ID })'"> Eliminar </button>
                        <button class="submit back" type="button" onclick="location.href='@Url.Action("Index", "Promotions")'"> Voltar </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>