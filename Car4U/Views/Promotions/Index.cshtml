@model IEnumerable<Car4U.Models.Promotion>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<br />
<h4 style="color:black">Promoções</h4>
<br />

<div class="form-group">
    <div class="buttonbackoffice">
        <button class="submit" type="button" onclick="location.href='@Url.Action("Create", "Promotions")'">Adicionar</button>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            Nome
            @*@Html.DisplayNameFor(model => model.Description)*@
        </th>
        <th>
            Percentagem
            @*@Html.DisplayNameFor(model => model.Percentage)*@
        </th>
        <th>
            Dias
            @*@Html.DisplayNameFor(model => model.Days)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Percentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Days)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

