@model Car4U.Models.Reservation
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@{
    ViewBag.Title = "Details";
}

<div class="page-header">
    <h2>Reservation</h2>
</div>
<div class=" form-horizontal">
    <div class="form-group">
        <div class=" col-md-10">
            <div class=" container">
                <table class=" table tableheader table-responsive" style="width:350px">
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td> Nome Cliente</td>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <td> País</td>
                        <td>@Html.DisplayFor(model => model.Country.Name)</td>
                    </tr>

                    <tr>
                        <td> Morada</td>
                        <td>@Html.DisplayNameFor(model => model.Address)</td>
                    </tr>
                    <tr>
                        <td> Código Postal</td>
                        <td>@Html.DisplayNameFor(model => model.PostalCode)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayFor(model => model.Email)</td>
                        <td>@Html.DisplayNameFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <td> Carta Condução nº</td>
                        <td>@Html.DisplayNameFor(model => model.License)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayFor(model => model.BI)</td>
                        <td>@Html.DisplayNameFor(model => model.BI)</td>
                    </tr>
                    <tr>
                        <td> Data de Reserva</td>
                        <td>@Html.DisplayNameFor(model => model.ReservationDate)</td>
                    </tr>
                    <tr>
                        <td> Local de Entrega</td>
                        <td>@Html.DisplayFor(model => model.MPDelivery.Place) </td>
                    </tr>
                    <tr>
                        <td>Observação de Entrega</td>
                        <td>@Html.DisplayFor(model => model.MomentDelivery.Observation)</td>
                    </tr>
                    <tr>
                        <td> Data de Entrega</td>
                        <td>@Html.DisplayNameFor(model => model.DeliveryDate)</td>
                    </tr>
                    <tr>
                        <td> Hora de Entrega</td>
                        <td>@Html.DisplayNameFor(model => model.DeliveryHour)</td>
                    </tr>
                    <tr>
                        <td> Local de Devolução</td>
                        <td>@Html.DisplayFor(model => model.MPDelivery.Place)</td>

                    </tr>
                    <tr>
                        <td>Observação de Devolução</td>
                        <td>@Html.DisplayFor(model => model.MomentReturn.Observation)</td>
                    </tr>
                    <tr>
                        <td> Data de Devolução</td>
                        <td>@Html.DisplayNameFor(model => model.ReturnDate)</td>
                    <tr>
                    <tr>
                        <td> Hora de Devolução</td>
                        <td>@Html.DisplayNameFor(model => model.ReturnHour)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayFor(model => model.FinalPrice)</td>
                        <td>@Html.DisplayNameFor(model => model.FinalPrice)</td>
                    </tr>
                </table>
                <div class="buttonbackoffice">
                    <button class="submit icon-edit" type="button" onclick="location.href='@Url.Action("Edit", "Reservations", new { id = Model.ID })'"> Editar </button>
                    <button class="submit icon-Delete" type="button" onclick="location.href='@Url.Action("Delete", "Reservations", new { id = Model.ID })'">Eliminar</button>
                    <button class="submit icon-back" type="button" onclick="location.href='@Url.Action("Index", "Reservations")'"> Voltar </button>
                </div>
            </div>
        </div>
    </div>
</div>

