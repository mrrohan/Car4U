@model IEnumerable<Car4U.Models.Reservation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<body>

    <h3>Visualizar Reservas</h3>

    <div class="container">


        <table class="table tableheader table-responsive" style="width:85%">

            <tr class="text-center">
                <th>
                    ID
                    @*@Html.DisplayName("ID")*@
                </th>
                <th>
                    Nome
                    @*@Html.DisplayName("Nome")*@
                </th>
                <th>
                    E-mail
                    @*@Html.DisplayName("E-Mail")*@
                </th>

                @*<td class="neon-text">
                        Data de reserva
                        @html.displayname("reservation date")
                        @html.displaynamefor(model => model.reservationdate)
                    </td>*@
                <th>
                    Data de Entrega
                    @*@Html.DisplayName("Delivery Date")*@
                    @*@Html.DisplayNameFor(model => model.DeliveryDate)*@
                </th>
                <th class="neon-text">
                    Data de Recolha
                    @*@Html.DisplayName(" Return Date")*@
                    @*@Html.DisplayNameFor(model => model.ReturnDate)*@
                </th>
                @*<td class="neon-text">
                        Categoria
                        @Html.DisplayName("Category")
                    </td>
                    <td class="neon-text">
                        Extras
                        @Html.DisplayName("Extras")
                    </td>
                    <td class="neon-text">
                        Promoção
                        @Html.DisplayName("Promotion")
                    </td>*@
                <th>
                    Preço Final
                    @*@Html.DisplayName("Final Price")*@
                    @*@Html.DisplayNameFor(model => model.FinalPrice)*@
                </th>
                <th style="width:300px">
                    + Opções
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReturnDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinalPrice)
                    </td>
                    <td >

                        <div class=" buttonbackoffice">
                            <div class="form-group">

                                <button class="submit icon-Car" title="Observações de Entrega" type="button" onclick="location.href='@Url.Action("Details", "MomentDeliveries", new { id = item.ID })'"> Entrega </button>
                                <button class="submit icon-Car" title="Observações de devolução" type="button" onclick="location.href='@Url.Action("Details", "MomentReturns", new { id = item.ID })'"> Devolução </button>
                                @*<a id="edit-details" href="~/MomentDeliveries/Details/@item.ID">Data de Entrega</a> |
                                    <a id="edit-details" href="~/MomentReturns/Details/@item.ID">Data de Devolução</a> |*@
                            </div>
                            <div class="form-group">
                                @if (item.ReturnDate > DateTime.Now)
                                {
                                    @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "icon-edit submit", @title = "Editar Reserva" })

                                }
                                @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "icon-Details submit", @title = "Detalhes de Reserva" })
                                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "icon-Delete submit", @title = "Eliminar Reserva" })
                            </div>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</body>