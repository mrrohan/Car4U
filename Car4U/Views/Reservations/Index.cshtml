@model IEnumerable<Car4U.Models.Reservation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<body>
    <div class="page-header">
        <h2>Visualizar Reservas</h2>
    </div>

    <div class="container col-lg-11">


        <table class="table tableheader table-responsive">
            <thead>

                <tr class="text-center">
                    <th>ID </th>
                    <th> Nome </th>
                    <th>E-mail</th>
                    <th> Data de Entrega</th>
                    <th>Data de Recolha  </th>
                    <th>Preço Final </th>
                    <th style="font-weight:900;
                    font-size:14px;
                    font-style:oblique" ;>+ Opções</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReturnDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinalPrice) €
                    </td>
                    <td>

                        <div class="iconsbackoffice">
                            <div class="form-group">

                                @if (item.ReturnDate > DateTime.Now)
                                {
                                    @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "icon-Confirmar", @title = "Confirmar Reserva" })

                                }
                                @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "icon-Details", @title = "Detalhes de Reserva" })
                                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "icon-Delete", @title = "Eliminar Reserva" })
                                <button class="icon-Car" title="Observações de Entrega" type="button" onclick="location.href='@Url.Action("Details", "MomentDeliveries", new { id = item.ID })'"> E </button>
                                <button class="icon-Car" title="Observações de devolução" type="button" onclick="location.href='@Url.Action("Details", "MomentReturns", new { id = item.ID })'"> D </button>


                                @*<a id="edit-details" href="~/MomentDeliveries/Details/@item.ID">Data de Entrega</a> |
                                    <a id="edit-details" href="~/MomentReturns/Details/@item.ID">Data de Devolução</a> |*@

                            </div>
                        </div>

                    </td>
                </tr>
            }

        </table>
    </div>
</body>
