@model Car4U.Models.Reservation

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3>Escolha o tipo de Viatura</h3>
    <div class="row">
        <div class=" col-md-3">
            <div class="sidebar-booking">
                <h3>Reserva Actual</h3>
                <br />
                <div class="row">

                    <h5>
                        <b>Entrega</b>
                    </h5>
                    " Lisboa - Aeroporto"
                    <br />
                    " Reservation Date"
                </div>
                <div class="row">

                    <h5>
                        <b>Recolha</b>
                    </h5>
                    " Lisboa - Aeroporto"
                    <br />
                    " Reservation Date"
                </div>
                <div class="row">

                    <h5>
                        <b>Viatura e Condutor</b>
                    </h5>
                    " Condutor com x anos"
                    <br />
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <form method="post">
                <div class="row reserva ">
                    <div class="col-md-12">
                        <h3>
                            Peugeot 106 ou similares
                        </h3>
                        <h6>
                            Grupo A
                        </h6>
                        <h6>
                            <b>Categoria</b>
                            "Economico"
                        </h6>
                        <br />
                        <h6> Franquia 10 mil Euros</h6>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @*imgsource*@
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <ul>
                                    <li title="Nº de pessoas">4</li>
                                    <li title="Nº de portas">3</li>
                                    <li title="Bagagem">3</li>
                                    <li title="Caixa de velocidades">manual</li>
                                    <li title="Tipo combustível">Gasolina</li>
                                    <li>Ar condicionado</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <center>
                            <h2>32.50€ por dia</h2>
                            <br />
                            <h5>
                                <b>280.50€ </b>
                                por
                                <b>8</b>
                                dias
                            </h5>
                            <div class="button">
                                <button type="submit" class="submit" value="32">RESERVE JÁ</button>
                                <p class="comment"></p>
                            </div>
                        </center>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-9">
            <form method="post">
                <div class="row reserva ">
                    <div class="col-md-12">
                        <h3>
                            Peugeot 106 ou similares
                        </h3>
                        <h6>
                            Grupo A
                        </h6>
                        <h6>
                            <b>Categoria</b>
                            "Economico"
                        </h6>
                        <br />
                        <h6> Franquia 10 mil Euros</h6>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @*imgsource*@
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <ul>
                                    <li title="Nº de pessoas">5</li>
                                    <li title="Nº de portas">5</li>
                                    <li title="Bagagem">2</li>
                                    <li title="Caixa de velocidades">Automatico</li>
                                    <li title="Tipo combustível">Gasoleo</li>
                                    <li>Ar condicionado</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <center>
                            <h2>39.50€ por dia</h2>
                            <br />
                            <h5>
                                <b>300.50€ </b>
                                por
                                <b>5</b>
                                dias
                            </h5>
                            <div class="button">
                                <button type="submit" class="submit" value="32">RESERVE JÁ</button>
                                <p class="comment"></p>
                            </div>
                        </center>
                    </div>
                </div>
            </form>
        </div>
    </div>
}











