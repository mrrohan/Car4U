@model IEnumerable<Car4U.Models.Gear>
@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="page-header">
<h2>Tipo de Caixa</h2>
</div>

<div class="container col-lg-4">

    <div class="buttonbackoffice">
        <button class="submit icon-Add" style="float:left" type="button" onclick="location.href='@Url.Action("Create", "Gears")'"> Adicionar </button>
    </div>


    <table class="table tableheader table-responsive">
        <tr>
            <th>
                Tipo de Caixa
                @*@Html.DisplayNameFor(model => model.Description)*@
            </th>
            <th style="font-weight:900;
                    font-size:14px;
                    font-style:oblique" ;>+ Opções</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <div class="iconsbackoffice">
                        @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "icon-edit submit", @title = "Editar" })
                      
                        @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "icon-Delete submit", @title = "Apagar" })
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
