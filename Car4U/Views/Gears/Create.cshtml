@model Car4U.Models.Gear
@{
    ViewBag.Title = "Create";
}
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h2>Adicionar tipo de caixa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                <h2>Tipo de caixa</h2>
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <div class="">
                    <div class="buttonbackoffice" style="float: none">
                        <button class="submit  icon-Add" type="submit"> Adicionar </button>
                        <button class="submit  icon-back" type="button" onclick="location.href='@Url.Action("Index", "Gears")'"> Voltar </button>
                    </div>
                </div>
            </div>
            </div>
    </div>
}

