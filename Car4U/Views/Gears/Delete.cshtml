@model Car4U.Models.Gear
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@{
    ViewBag.Title = "Delete";
}
<div class="page-header">
    <h3>Tem a certeza que quer eliminar este tipo de caixa ?</h3>
</div>

<div class=" container">
    <div class=" form-horizontal">
        <div class="form-group">
            <div class=" col-md-10">
                <h3>Tem a certeza que quer eliminar este tipo de caixa ?</h3>
                <div>
                    <h4>
                        Tipo de Caixa: @Html.DisplayFor(model => model.Description)
                    </h4>
                </div>

                <div class="buttonbackoffice">

                    @using (Html.BeginForm())
                    {

                        @Html.AntiForgeryToken()

                        <div class="form-actions">
                            <button class="submit  icon-Delete" type="submit" value="Delete"> Apagar </button>
                        </div>
                    }
                    <button class="submit  icon-back" type="button" onclick="location.href='@Url.Action("Index", "Gears")'"> Voltar </button>
                </div>
            </div>
        </div>
    </div>
</div>
</div>