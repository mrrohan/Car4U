@model Car4U.Models.ExtraModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@{
    ViewBag.Title = "Delete";
}
<div class="page-header">
    <h2>Eliminar modelo?</h2>
</div>
<div class="container">
    <div class=" form-horizontal">
        <div class="form-group">
            <div class=" col-md-10">
                <h4> Tem a certeza que pretende apagar este modelo?</h4>
                <table class=" table tableheader table-responsive" style="width:200px">
                    <tr><th></th><th></th></tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.ExtraModelType.Description)</td>
                        <td>@Html.DisplayFor(model => model.ExtraModelType.Description)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Model)</td>
                        <td>@Html.DisplayFor(model => model.Model)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Price)</td>
                        <td>@Html.DisplayFor(model => model.Price)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Stock)</td>
                        <td>@Html.DisplayFor(model => model.Stock)</td>
                    </tr>
                </table>

            <div class="buttonbackoffice">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions">
                        <button class="submit  icon-Delete" type="submit" value="Delete"> Apagar </button>
                    </div>
                }
                <button class="submit  icon-back" type="button" onclick="location.href='@Url.Action("Index", "ExtraModels")'"> Voltar </button>
            </div>        
    </div>
        </div>
    </div>
</div>
   

    

