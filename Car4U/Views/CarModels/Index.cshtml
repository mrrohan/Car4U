@model IEnumerable<Car4U.Models.CarModel>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@{
    ViewBag.Title = "Index";
}

<div class="page-header">
    <h2>Modelos de Veiculos</h2>
</div>

<div class="container col-lg-6">


    <div class="buttonbackoffice">
        <button class="submit icon-Add" style="float:left" type="button" onclick="location.href='@Url.Action("Create", "CarModels")'"> Adicionar Modelo de Veiculo </button>
    </div>
    <table class="table tableheader table-responsive">
        <thead>
            <tr>
                <th width="200x">
                    Marca
                    @*@Html.DisplayNameFor(model => model.brand.Description)*@
                </th>
                <th width=200x">
                    Modelo
                    @*@Html.DisplayNameFor(model => model.Description)*@
                </th>
                <th style="font-weight:900;
                    font-size:14px;
                    font-style:oblique" ;>+ Opções</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.brand.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <div class="iconsbackoffice">
                        @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "icon-edit submit", @title = "Editar" })
                        @*@Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "icon-Details submit", @title = "Detalhes" })*@
                        @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "icon-Delete submit", @title = "Apagar" })
                    </div>
                </td>
            </tr>
        }

    </table>



</div>
