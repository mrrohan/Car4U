@model Car4U.Models.Car
@using Car4U.Models;

@{
    ViewBag.Title = "EditPhoto";
}

<h2>EditPhoto</h2>


@using (Html.BeginForm(Html.BeginForm("EditPhoto", "Cars", null, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Car</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        @if (Model.FilePaths.Any(f => f.FileType == Car4U.Models.FileType.Photo))
        {
            <div>
                Fotografia atual
            </div>
            <div>
                <img width="300" height="200" src="~/images/@Model.FilePaths.First(f => f.FileType == Car4U.Models.FileType.Photo).FileName" alt="" />
            </div>
        }
        

        <div class="form-group">
            @Html.Label("Nova Fotografia", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="Photo" name="upload" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
