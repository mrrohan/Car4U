@model Car4U.Models.ExtraModelType
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@{
    ViewBag.Title = "Delete";
}

<div class="page-header">
    <h2>Eliminar modelo extra?</h2>
</div>
<div class="container">
    <div class=" form-horizontal">
        <div class="form-group">
            <div class=" col-md-10">
                <h4> Tem a certeza que pretende apagar este modelo extra?</h4>
                <table class=" table tableheader table-responsive" style="width:200px">
                    <tr></tr>
                    <tr>
                        <td>Modelo de Extra</td>
                        <td>@Html.DisplayFor(model => model.Description)</td>
                    </tr>
                </table>
    <hr />

            <div class="buttonbackoffice">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions">
                        <button class="submit icon-Delete" type="submit" value="Delete"> Apagar </button>
                    </div>
                }
                <button class="submit icon-back" type="button" onclick="location.href='@Url.Action("Index", "ExtraModelTypes")'"> Voltar </button>
            </div>
        </div>
    </div>    
</div>
</div>
