@model IEnumerable<Car4U.Models.Category>

@{
    ViewBag.Title = "PrivateIndex";
}


@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h2>Categorias</h2>

<div class="buttonbackoffice">
    <button class="submit icon-Add" style="float:left" type="button" onclick="location.href='@Url.Action("Create", "Categories")'"> Adicionar </button>
</div>
<table class="table tableheader">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Warranty)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Warranty)
        </td>
        <td>
            <div>
                @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "icon-edit submit", @title = "Editar" })
                @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "icon-Details submit", @title = "Detalhes" })
                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "icon-Delete submit", @title = "Apagar" })
            </div>
        </td>
    </tr>
}

</table>
